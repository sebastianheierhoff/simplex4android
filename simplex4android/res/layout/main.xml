<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10px" 
    android:background="#FFFFFF" >

    <!-- Herzlich Willkommen -->
    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Herzlich Willkommen zu:"/>
    <ImageView
		android:id="@+id/simplex4android_logo"
		android:src="@drawable/simplex4android_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/label"
		android:layout_centerHorizontal="true" />
	<LinearLayout
		android:id="@+id/button_group"
		android:padding="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/simplex4android_logo"
		android:orientation="vertical">
		<!-- Neues Problem -->
	    <Button
	    	android:id="@+id/button_new"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Neues Problem" />
	    <!-- Problem laden-->
	    <Button
	        android:id="@+id/button_load"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Problem laden" />
	    <Button
	        android:id="@+id/button_tutorial"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Tutorial/Dokumentation"
	        android:textColor="#F0F0F0" />    
	</LinearLayout>
</RelativeLayout>