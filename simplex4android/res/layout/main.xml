<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10px" 
    android:background="#FFFFFF" >
    <ImageView
		android:id="@+id/simplex4android_logo"
		android:src="@drawable/simplex4android_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true" />
	<LinearLayout
		android:id="@+id/btn_group"
		android:padding="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/simplex4android_logo"
		android:orientation="vertical">
		<!-- Aktuelles Problem -->
	    <Button
	    	android:id="@+id/btn_current"
	        android:layout_width="fill_parent"
	        android:layout_height="52dip"
	        android:text="Aktuelles Problem"
	        android:enabled="false" />
		<!-- Neues Problem -->
	    <Button
	    	android:id="@+id/btn_new"
	        android:layout_width="fill_parent"
	        android:layout_height="52dip"
	        android:text="Neues Problem" />
	    <!-- Problem laden-->
	    <Button
	        android:id="@+id/btn_load"
	        android:layout_width="fill_parent"
	        android:layout_height="52dip"
	        android:text="Problem laden" />
	    <Button
	        android:id="@+id/btn_tutorial"
	        android:layout_width="fill_parent"
	        android:layout_height="52dip"
	        android:text="Tutorial/Dokumentation" />    
	</LinearLayout>
</RelativeLayout>