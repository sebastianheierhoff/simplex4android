<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_margin="0px"
  android:padding="0px"
  android:orientation="vertical"
  android:layout_alignParentBottom="true"
  android:background="#FFFFFF">
  <LinearLayout
  	android:layout_height="wrap_content"
  	android:layout_width="fill_parent"
  	android:orientation="horizontal">
    <Button
		android:id="@+id/button_1"
		android:background="@drawable/button_1"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
    	android:tag="1"/>
    <Button
		android:id="@+id/button_2"
		android:background="@drawable/button_2"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
  		android:tag="2"/>
    <Button
		android:id="@+id/button_3"
		android:background="@drawable/button_3"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
  		android:tag="3"/>
    <Button
		android:id="@+id/button_4"
		android:background="@drawable/button_4"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
  		android:tag="4"/>
    <Button
		android:id="@+id/button_5"
		android:background="@drawable/button_5"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
		android:tag="5"/>
	<Button
		android:id="@+id/button_minus"
		android:background="@drawable/button_minus"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
  		android:tag="-"/>
	<Button
		android:id="@+id/button_divide"
		android:background="@drawable/button_divide"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
  		android:tag="/"/>
	</LinearLayout>
  	<LinearLayout
  		android:layout_centerHorizontal="true" 
  		android:layout_height="wrap_content"
  		android:layout_width="fill_parent"
  		android:orientation="horizontal"
		android:gravity="center_horizontal">
    <Button
		android:id="@+id/button_6"
		android:background="@drawable/button_6"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
  		android:tag="6"/>
    <Button
		android:id="@+id/button_7"
		android:background="@drawable/button_7"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
		android:tag="7"/>
    <Button
		android:id="@+id/button_8"
		android:background="@drawable/button_8"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
  		android:tag="8"/>
    <Button
		android:id="@+id/button_9"
		android:background="@drawable/button_9"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
  		android:tag="9"/>
      <Button
		android:id="@+id/button_0"
		android:background="@drawable/button_0"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
  		android:tag="0"/>
    <Button
		android:id="@+id/button_decimal"
		android:background="@drawable/button_decimal"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"
  		android:tag="."/>
  	<Button
		android:id="@+id/button_add_target_element"
		android:background="@drawable/button_add_target_element"
		android:layout_height="45dip"
		android:layout_width="45dip"
		android:layout_gravity="bottom"/>
	</LinearLayout>
</LinearLayout>

