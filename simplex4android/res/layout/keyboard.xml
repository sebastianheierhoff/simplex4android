<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_margin="0px"
  android:padding="0px"
  android:orientation="vertical"
  android:layout_alignParentBottom="true"
  android:background="#FFFFFF">
  <LinearLayout
  	android:layout_height="wrap_content"
  	android:layout_width="fill_parent"
  	android:orientation="horizontal">
   	<Button
		android:id="@+id/btn_minus"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="-"
  		android:tag="-"/>
    <Button
		android:id="@+id/btn_1"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="1"
    	android:tag="1"/>
    <Button
		android:id="@+id/btn_2"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="2"
  		android:tag="2"/>
    <Button
		android:id="@+id/btn_3"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="3"
  		android:tag="3"/>
    <Button
		android:id="@+id/btn_4"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="4"
  		android:tag="4"/>
    <Button
		android:id="@+id/btn_5"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="5"
		android:tag="5"/>
	<Button
		android:id="@+id/btn_backspace"
		android:background="@drawable/btn_backspace"
		android:layout_width="102dip"
	    android:layout_height="50dip"
  		android:tag="backspace"/>
	</LinearLayout>
  	<LinearLayout
  		android:layout_centerHorizontal="true" 
  		android:layout_height="wrap_content"
  		android:layout_width="fill_parent"
  		android:orientation="horizontal"
		android:gravity="center_horizontal">
    <Button
		android:background="@drawable/btn_square_overlay"
		android:layout_width="51dip"
	    android:layout_height="50dip"
		android:layout_margin="0dip"
  		android:enabled="false"/>
    <Button
		android:id="@+id/btn_6"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="6"
  		android:tag="6"/>
    <Button
		android:id="@+id/btn_7"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="7"
		android:tag="7"/>
    <Button
		android:id="@+id/btn_8"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="8"
  		android:tag="8"/>
    <Button
		android:id="@+id/btn_9"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="9"
  		android:tag="9"/>
      <Button
		android:id="@+id/btn_0"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="0"
  		android:tag="0"/>
    <Button
		android:id="@+id/btn_decimal"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
		android:text="."
  		android:tag="."/>
	<Button
		android:id="@+id/btn_divide"
		android:background="@drawable/btn_square_overlay"
		android:layout_height="50dip"
		android:layout_width="51dip"
		android:layout_gravity="bottom"
  		android:text="/"
  		android:tag="/"/>
	</LinearLayout>
</LinearLayout>

